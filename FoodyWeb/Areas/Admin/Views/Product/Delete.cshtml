 @model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-promary"> Delete Product </h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"> </label>
            <input asp-for="Name" disabled type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row  p-1">
            <label asp-for="DisplayOrder" class="p-0"> </label>
            <input type="text" asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">

            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control"> Delete</button>
            </div>

             <div class="col-6 col-md-3">  
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control"> Back to list</a>
            </div>
        </div>



    </div>
</form>



