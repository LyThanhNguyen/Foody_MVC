@model List<Product>

<div class="container" >
    <div class="row pt-4 pb-23">
        <div class="col-6 text-end">
            <h2> Product list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create new Product
            </a>
        </div>
    </div>



<table class="table  table-bordered table-striped">
 <thead>
    <tr> 
        <th> Product Name</th>
        <th>Display Order</th>
        <th></th>
       
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderByDescending(u => u.DisplayOrder))
        {
        <tr> 
            <td>
                @obj.Name
            </td>
            <td>
                @obj.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
                                           <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>

        </tr>
        }
    </tbody>

</table>
</div>